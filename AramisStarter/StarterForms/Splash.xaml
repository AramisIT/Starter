<Window x:Class="AramisStarter.Splash"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
         Height="379" Width="606"  ResizeMode="NoResize" Background="#0000"  WindowStartupLocation="CenterScreen"  WindowStyle="None" AllowsTransparency="True" ShowInTaskbar="False"  >
    <Canvas Loaded="Grid_Loaded_1">
        <Image x:Name="logoImage" Loaded="logoImage_Loaded"></Image>
       <Rectangle Fill="#FCCC" Width="129" Height="11" Canvas.Left="477" Canvas.Top="365" x:Name="progressRect" ></Rectangle>
        <ProgressBar Height="11" Canvas.Top="365" Width="129" Value="50" Background="{x:Null}" BorderThickness="0" Canvas.Left="477" RenderTransformOrigin="1.596,-1.826" Foreground="#FF3E14FD" x:Name="loadingProgress">
            <ProgressBar.BorderBrush>
                <LinearGradientBrush EndPoint="0,1" StartPoint="0,0">
                    <GradientStop Color="#FFB2B2B2" Offset="0"/>
                    <GradientStop Color="#FF232323" Offset="1"/>
                </LinearGradientBrush>
            </ProgressBar.BorderBrush>
        </ProgressBar>


    </Canvas>
</Window>
