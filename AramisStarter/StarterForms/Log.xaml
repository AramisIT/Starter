<Window x:Class="AramisStarter.Log"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Log ver. 1.3" Height="700" Width="500">
    
       
        <Grid HorizontalAlignment="Stretch">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"></RowDefinition>
                <RowDefinition></RowDefinition>
            </Grid.RowDefinitions>
            <Button Height="24" Click="Button_Click_1">Очистить</Button>
            <TextBox IsReadOnly="True" Grid.Row="1" HorizontalAlignment="Stretch" TextWrapping="Wrap" VerticalScrollBarVisibility="Visible" x:Name="logTextBox"></TextBox>
        </Grid>
   
</Window>
